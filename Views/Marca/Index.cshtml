@model List<MarcaModel>
@{
    ViewData["Title"] = "Inicial";
}


<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Marca" asp-action="CriarMarcas">Adicionar nova Marca</a>
    </div>

    <br />

    <h1 class="display-4"> Lista de Marcas</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Marcas</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (MarcaModel marca in Model)
                {
                    <tr>
                        <th scope="row">@marca.Id</th>
                        <td>@marca.Marca</td>

                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary"  asp-controller="Contato" asp-action="Index">Entrar</a>

                            </div>
                        </td>

                    </tr>

                }
            }

        </tbody>
    </table>
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-action="Index" asp-controller="Home">Sair</a>
    </div>
</div>